{
    "tableWidget": [
        {
            "cardClasses": "p-d-flex p-flex-row p-ai-center",
            "components": [
                {
                    "cssClass": "kn-material-input p-d-flex p-flex-row kn-flex p-m-2",
                    "label": "dashboard.widgetEditor.pagination",
                    "property": "settings.pagination.enabled",
                    "type": "inputSwitch"
                },
                {
                    "cssClass": "kn-flex p-m-2",
                    "disabled": "functions.disabledTest",
                    "inputClass": "kn-material-input",
                    "label": "dashboard.widgetEditor.itemsPerPage",
                    "property": "settings.pagination.itemsNumber",
                    "relatedTo": "dashboard.widgetEditor.pagination",
                    "type": "inputText"
                }
            ]
        },
        {
            "cardClasses": "",
            "components": [
                {
                    "columns": [
                        {
                            "columnBodyStyle": "max-width: 200px",
                            "editableField": {
                                "function": "functions.updateColumnValue",
                                "type": "inputText"
                            },
                            "field": "alias"
                        },
                        {
                            "field": "name"
                        },
                        {
                            "columnBodyStyle": "max-width: 100px",
                            "editableField": {
                                "function": "functions.updateColumnValue",
                                "options": "functions.getColumnAggregationOptions",
                                "type": "dropdown",
                                "visibilityCondition": "functions.showAggregationDropdown"
                            },
                            "field": "aggregation"
                        }
                    ],
                    "cssClass": "kn-material-input p-d-flex p-flex-row kn-flex p-m-2",
                    "settings": {
                        "buttonColumnStyle": {
                            "min-width": "125px",
                            "text-align": "end"
                        },
                        "buttons": [
                            {
                                "function": "functions.updateColumnVisibility",
                                "icon": "fa fa-eye",
                                "tooltip": "common.visibility"
                            },
                            {
                                "function": "functions.setSelectedColumn",
                                "icon": "fas fa-cog",
                                "tooltip": "common.edit"
                            },
                            {
                                "function": "functions.removeColumn",
                                "icon": "pi pi-trash",
                                "tooltip": "common.delete"
                            }
                        ],
                        "dataKey": "name",
                        "dropIsActive": {
                            "dropFunction": "functions.onColumnDrop"
                        },
                        "hideHeaders": true,
                        "iconColumn": "functions.getColumnIcons",
                        "label": "dashboard.widgetEditor.selectedColumns",
                        "property": "columns",
                        "responsiveLayout": "stack",
                        "rowReorder": {
                            "rowReorderColumnStyle": "width: 3rem"
                        }
                    },
                    "titleFunction": "functions.getSelectedColumnTitle",
                    "type": "dataTable"
                }
            ]
        },
        {
            "cardClasses": "p-d-flex p-flex-row p-ai-center",
            "components": [
                {
                    "cssClass": "p-d-flex p-flex-column kn-flex-2 p-m-2",
                    "inputClass": "kn-material-input",
                    "label": "common.alias",
                    "property": "temp.selectedColumn.alias",
                    "settings": {
                        "onUpdate": "functions.updateSelectedColumn"
                    },
                    "type": "inputText"
                },
                {
                    "cssClass": "p-d-flex p-flex-column kn-flex p-m-2",
                    "label": "qbe.simpleTable.aggregation",
                    "options": "functions.getColumnAggregationOptions",
                    "property": "temp.selectedColumn.aggregation",
                    "settings": {
                        "onUpdate": "functions.updateSelectedColumn"
                    },
                    "type": "dropdown",
                    "visibilityCondition": "functions.selectedColumnDropdownIsVisible"
                }
            ],
            "title": "dashboard.widgetEditor.columnDetails",
            "visibilityCondition": "functions.columnIsSelected"
        }
    ]
}
